{
    "name": "oro/crm-dotmailer",
    "description": "Oro Dotmailer integration",
    "homepage": "https://github.com/oroinc/OroCRMDotmailerBundle.git",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "http://www.orocrm.com"
        }
    ],
    "autoload": {
        "psr-4": {"Oro\\Bundle\\DotmailerBundle\\": ""},
        "exclude-from-classmap": ["/Tests/"]
    },
    "require": {
        "php": "7.1.*",
        "oro/crm": "3.0.x-dev",
        "romanpitak/dotmailer-api-v2-client": "1.0.11",
        "oro/marketing" : "3.0.x-dev"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.orocrm.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
             "dev-3.0-beta": "3.0.x-dev"
        }
    }
}
